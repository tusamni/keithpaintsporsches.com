---
import { actions } from "astro:actions";
import Container from "@/components/content/Container";

// props
export interface Props {
    singleColumn?: boolean;
}
const { singleColumn = false } = Astro.props;
---

<h2>Contact Me</h2>
<form
    class:list={["grid gap-x-8 gap-y-6 grid-cols-2"]}
    id="form-contact"
    action={"/contact/success" + actions.contact}
    method="POST"
>
    <div
        class:list={[
            "space-y-6",
            singleColumn ? "col-span-2" : "col-span-2 lg:col-span-1",
        ]}
    >
        <div class="space-y-1 sm:space-y-2">
            <label for="name">Name</label>
            <input
                type="text"
                autocomplete="name"
                name="name"
                id="name"
                required
            />
        </div>

        <div class="space-y-1 sm:space-y-2">
            <label for="email">E-mail</label>
            <input
                type="email"
                autocomplete="email"
                name="email"
                id="email"
                required
            />
        </div>

        <div class="space-y-1 sm:space-y-2">
            <label for="phone">Phone</label>
            <input
                type="tel"
                name="phone"
                id="phone"
                aria-describedby="phone-optional"
                autocomplete="tel"
            />
        </div>
    </div>

    <div class="hidden">
        <label for="zip">Zip Code</label>
        <input name="zip" id="zip" />
    </div>

    <div
        class:list={[
            "space-y-1 sm:space-y-2 flex flex-col",
            singleColumn ? "col-span-2" : "col-span-2 lg:col-span-1",
        ]}
    >
        <label for="message">How can I help you?</label>
        <textarea
            id="message"
            name="message"
            aria-describedby="message-optional"
            class:list={[singleColumn ? "h-40" : "h-32 lg:h-full"]}></textarea>
    </div>

    <input type="hidden" name="path" id="path" value={Astro.url.pathname} />
    <input type="hidden" name="marketing" id="marketing" value="" />

    <div
        class="col-span-2 flex flex-col gap-y-6 md:flex-row md:justify-between md:items-center mt-4 lg:mt-0"
    >
        <button class:list={[`button-success button text-base`]}
            >Let's Talk</button
        >
    </div>
</form>
