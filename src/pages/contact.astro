---
import MainLayout from "@/layouts/MainLayout";

import Container from "@/components/content/Container";
import ContactForm from "@/components/ContactForm";
import Image from "@/components/images/Image";
import Section from "@/components/content/Section";

const images = [
    "https://cdn.cosmicjs.com/0e314c10-caf7-11f0-826a-995f2a268e8b-1973-porsche-911s-targa_012.jpg",
    "https://cdn.cosmicjs.com/c90694f0-caf7-11f0-826a-995f2a268e8b-1986-porsche-930-turbo_013.jpg",
    "https://cdn.cosmicjs.com/0dd5be90-caf7-11f0-826a-995f2a268e8b-1969-porsche-911s_014.jpg",
];
---

<MainLayout>
    <Section>
        <Container>
            <div class="space-y-12">
                <h1>Let's<br />Work<br />Together!</h1>

                <hr class="max-w-16" />

                <div class="flex space-y-4 max-w-6xl gap-8">
                    <div class="w-156 space-y-6">
                        <div class="text-lg lg:text-2xl text-stone-200">
                            If you're ready to start on the concours-quality
                            restoration of your classic Porsche, let's chat!
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-12 gap-8">
                    <div
                        class="col-span-12 md:col-span-5 grid grid-cols-2 gap-4 order-2 md:order-1"
                    >
                        {
                            images.map((p, i) => (
                                <Image
                                    src={p}
                                    figureClass={`w-full h-full ${i == 0 && "col-span-2"}`}
                                    class="w-full h-full object-cover"
                                />
                            ))
                        }
                    </div>

                    <div class="col-span-12 md:col-span-7 order-1 md:order-2">
                        <ContactForm singleColumn={true} />
                    </div>
                </div>
            </div>
        </Container>
    </Section>
</MainLayout>
